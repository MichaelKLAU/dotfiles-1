# This bash configuration is used on my Mac

set -o vi
set -P # make bash respect physical path

alias ls='ls -GF'
alias grep='grep --color'
alias git='/opt/local/bin/git'
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'
alias vimdiff='/Applications/MacVim.app/Contents/MacOS/Vim -d'
alias vi='mvim --remote-tab'

md () { mkdir -p "$@" && cd "$_" ; } 

export PATH=~/bin:$PATH
export EDITOR='/Applications/MacVim.app/Contents/MacOS/Vim'

export PATH=/opt/local/bin:/opt/local/sbin:$PATH
export MANPATH=/opt/local/share/man:$MANPATH

#PS1="[\\u@\\h:\\W]$ "
# to set window tile in screen as the program it is running
#export PS1='\[\033k\033\\\]\u@\h:\w\$ '
#PS1='\[\033k\033\\\][\w]$ '

# Set screen window title
case "$TERM" in
screen)
#linux)
#screen.linux)
#PROMPT_COMMAND='echo -ne "\033k$HOSTNAME\033\\"'
export PROMPT_COMMAND='echo -ne "\033k${PWD##*/}\033\\"'
;;
esac

# To use bash_completion
# make sure you have installed bash_completion
if [ -f /opt/local/etc/profile.d/bash_completion.sh ]; then
    . /opt/local/etc/profile.d/bash_completion.sh
fi

if [ -f /opt/local/share/git-core/git-prompt.sh ]; then
      . /opt/local/share/git-core/git-prompt.sh 
fi 

PS1='[\w]$(__git_ps1 " (%s) ")\$ '

# This was generated by Jewelry Box in .bash_login. 
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

export LANG="en_US.UTF-8"
export LC_COLLATE="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export LC_MESSAGES="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_ALL=

# virtualenvwrapper is a set of extensions to Ian Bicking's virtualenv tool
# http://pypi.python.org/pypi/virtualenvwrapper
export WORKON_HOME=~/Repos/VirtualEnvs
export VIRTUALENVWRAPPER_HOOK_DIR=~/Repos/VirtualEnvWrapper_Hooks


if [ ! -d "$WORKON_HOME" ] ; then
  mkdir -p "$WORKON_HOME"
fi

if [ ! -d "$VIRTUALENVWRAPPER_HOOK_DIR" ] ; then
  mkdir -p "$VIRTUALENVWRAPPER_HOOK_DIR"
fi

if [ -f /usr/local/bin/virtualenvwrapper.sh ] ; then
  source /usr/local/bin/virtualenvwrapper.sh
fi

export HISTCONTROL=ignorespace 
function gi() { curl http://gitignore.io/api/$@ ;}

shopt -s cdspell
shopt -s dirspell
